    string currentWord;

    while (sentenceStream >> currentWord) {
        currentWord.erase(remove_if(currentWord.begin(), currentWord.end(), [](char c) {
            return ispunct(c);
        }), currentWord.end());

        for (char &c : currentWord) {
            c = tolower(c);
        }

        wordCount[currentWord]++;
    }

