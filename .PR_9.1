
#include <iostream>
#include <limits>

using namespace std;

int main() {
    double requestedLoan, yearlyEarnings;

    cout << "Enter loan amount: ";
    while (!(cin >> requestedLoan) || requestedLoan < 0) {
        cout << "Invalid input. Please enter a positive number for loan amount: ";
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
    }

    cout << "Enter annual income: ";
    while (!(cin >> yearlyEarnings) || yearlyEarnings <= 0) {
        if (yearlyEarnings == 0)
            cout << "Annual income cannot be zero. Please enter a valid number: ";
        else
            cout << "Invalid input. Please enter a positive number for income: ";
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
    }

    double loanIncomeRatio = requestedLoan / yearlyEarnings;
    cout << "Loan-to-Income Ratio: " << loanIncomeRatio << endl;

    cout << "SMIT DAFDA 24CE021"  << endl;
    return 0;
}
